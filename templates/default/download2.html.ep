% layout 'dashboard';
<% foreach (@$files) {%>
<a class='dl' href="<%= $_ %>"><%= $_ %></a><br>
<% } %>

<script>
    $.each($('a.dl'), function( ) {
        var href = $(this).attr('href');

        // var encoded = btoa(href);
        var real_href = window.location.pathname;
        $(this).attr('href', real_href + '/' + href);

        console.log( href + ": " + real_href );
    });
</script>