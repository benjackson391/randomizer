            <a href="/users">Пользователи</a>
            <a href="/logout">Выход</a>
        </div>
        <div class="main">
            <%= content %>
        </div>
        <script type="text/javascript">
            var path = window.location.pathname;
            console.log(path);
            $("a[href='" + path + "']").css("color", "white");
        </script>
